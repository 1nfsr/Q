{
  "name": "hugo-mini-tailwind-theme",
  "version": "1.0.0",
  "description": "A minimal Hugo theme using Tailwind CSS",
  "scripts": {
    "dev": "npx tailwindcss -i ./assets/css/main.css -o ./static/css/styles.css --watch",
    "build": "npx tailwindcss -i ./assets/css/main.css -o ./static/css/styles.css --minify"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "tailwindcss": "^3.3.5"
  }
}